<div class="form-new-container">
<form action="/beats" method="POST" enctype="multipart/form-data">

  <div class="input-group mb-1">
    <span class="input-group-text"><i class="fa fa-tag fa-fw"></i></span>
    <input type="text" name="title" value="{{ beat.title }}" class="form-control {{#if errors.title }}is-invalid{{/if}}" placeholder="Enter beat title..." />
    {{#if errors.title }}<div class="invalid-feedback">{{ errors.title }}</div>{{/if}}
  </div>

  <div class="input-group mb-1">
    <span class="input-group-text"><i class="fa fa-edit fa-fw"></i></span>
    <textarea class="form-control {{#if errors.description }}is-invalid{{/if}}" name="description" aria-label="Beat description" placeholder="Enter the style ..." >{{ beat.description}}</textarea>
    {{#if errors.description }}<div class="invalid-feedback">{{ errors.description }}</div>{{/if}}
  </div>

    <div class="input-group mb-1">
    <span class="input-group-text"><i class="fa fa-picture-o fa-fw"></i></span>
    <input type="text" name="bpms" value="{{ beat.bpms }}" class="form-control {{#if errors.bpms }}is-invalid{{/if}}"
      placeholder="Enter the bpms" />
    {{#if errors.bpms }}<div class="invalid-feedback">{{ errors.bpms }}</div>{{/if}}
 
    <div class="input-group mb-1">
    <span class="input-group-text"><i class="fa fa-picture-o fa-fw"></i></span>
    <input type="text" name="machine" value="{{ beat.machine }}" class="form-control {{#if errors.machine }}is-invalid{{/if}}"
      placeholder="Enter the machine" />
    {{#if errors.machine }}<div class="invalid-feedback">{{ errors.machine }}</div>{{/if}}

         <div class="input-group mb-1">
    <span class="input-group-text"><i class="fa fa-picture-o fa-fw"></i></span>
    <input type="text" name="url" value="{{ beat.url }}" class="form-control {{#if errors.url }}is-invalid{{/if}}"
      placeholder="Enter the beat process url..." />
    {{#if errors.url }}<div class="invalid-feedback">{{ errors.url }}</div>{{/if}} 


 <div class="input-group mb-1">
    <span class="input-group-text"><i class="fa fa-picture-o fa-fw"></i></span>
    <input type="file" name="audio" value="{{ beat.audio }}" class="form-control {{#if errors.audio }}is-invalid{{/if}}"
      placeholder="Enter beat image url..." />
    {{#if errors.audio }}<div class="invalid-feedback">{{ errors.audio }}</div>{{/if}}
  </div>








  <button type="submit" value="Submit" class="btn btn-primary btn-block" >
<div class="neon">
</div>

</button>
</form>

</div>